using System.Reflection.Metadata.Ecma335;

namespace Homework3;

class Program
{

    static void Main(string[] args)
    {
     //Q1 user input
        Console.WriteLine("Input an integer: ");
        int N = int.Parse(Console.ReadLine());

        if (IsPrime(N)) 
        {
            Console.WriteLine($"N is prime"); // q1 deleverable 
        }
        else
        {
            Console.WriteLine($"N is non-prime");
        }

        // Q2 user input
        Console.WriteLine("\nAssign an int value to N: ");
        int squareSize = int.Parse(Console.ReadLine());
        PrintSquarePattern(squareSize);

        //Q3 user input
        Console.WriteLine("\nAssign an int value to N: ");
        int triangleSize = int.Parse(Console.ReadLine());
        PrintTrianglePattern(triangleSize);
    }

    static bool IsPrime(int number) //checking for prime code
    {
        if (number <= 1) return false;
        for (int i = 2; i <= Math.Sqrt(number); i++)
        {
            if (number % i == 0) return false;
        }
        return true;
    }

    // Q2 delv answer in square 
    static void PrintSquarePattern(int N)
    {
        for (int i = 0; i < N; i++)
        {
            for (int j = 0; j < N; j++)
            {
                Console.Write("*");
            }
            Console.WriteLine();
        }
    }

    // Q3 answer in pyramid
    static void PrintTrianglePattern(int N)
    {
        for (int i = 1; i <= N; i++) 
        {
            for (int j = 1; j <= i; j++)
            {
                Console.Write("*");
            }
            Console.WriteLine();
        }
        Console.WriteLine();//extra line 
    }
}
